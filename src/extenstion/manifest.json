{
  "manifest_version": 3,
  "name": "Twitly",
  "version": "0.1",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "tabs", "activeTab", "cookies", "storage"],

  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
